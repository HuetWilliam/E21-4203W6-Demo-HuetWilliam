@model IEnumerable<ZombieParty2.Models.Zombie>

<div class="container p-3">
    <div class="row col-10">
        <div class="col-4 pb-2 align-items-end">
            <a asp-controller="Zombie" asp-action="Create" class="btn btn-success  col-10">
                <i class="fas fa-plus-circle"></i> &nbsp; Create Zombie
            </a>
        </div>
        <div class="row">
            <div class="row">
                @foreach (var item in Model)
                {
                    //Afficher les zombies
                    <partial name="_Zombie_Card" model="item"/>
                }
            </div>
        </div>
    </div>
</div>
